@page "{id}"
@model RazorPages.Pages.MovieModel
@{
    ViewData["Title"] = "Movie details";
}

<h3>@ViewData["Title"]</h3>
<hr/>

<div class="card">
    <div class="card-header">
        Movie>
    </div>
    <div class="card-body">
        <h5 class="card-title">@Model.Movie.Title</h5>
        <p class="card-text">@Model.Movie.Id</p>
        <p class="card-text">@Model.Movie.Rate</p>
        <p class="card-text">@Model.Movie.Description</p>
        <a href="/Movies" class="btn btn-primary">Show all</a>
    </div>
</div>